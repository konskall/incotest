rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /chats/{chatId} {
      allow create, read, update, delete: if request.auth != null;
      
      match /messages/{messageId} {
        allow create, read, update, delete: if request.auth != null;
      }
      match /presence/{uid} {
        allow create, read, update, delete: if request.auth != null;
      }
      match /fcm_tokens/{uid} {
        allow create, read, update, delete: if request.auth != null;
      }
    }
  }
}